{
  "hosting": [
    {
      "target": "dev",
      "public": "dist/edu-crm/browser/",
      "site": "educrm-dev",
      "headers": [
        {
          "source": "**",
          "headers": [
            { "key": "X-Content-Type-Options", "value": "nosniff" },
            { "key": "X-Frame-Options", "value": "DENY" },
            { "key": "X-XSS-Protection", "value": "1; mode=block" }
          ]
        }
      ],
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "acc",
      "public": "dist/edu-crm/browser/",
      "site": "educrm-acc"
    },
    {
      "target": "prod",
      "public": "dist/edu-crm/browser/",
      "site": "educrm-prod"
    }
  ]
}
